<?xml version="1.0" encoding="UTF-8"?>
<project name="parser" default="all">
  
  
  <property file="parser.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.jsoup-1.11.3.classpath">
    <pathelement location="C:/Users/Dmitri/Downloads/jsoup-1.11.3.jar"/>
  </path>
  
  <path id="library.poi-4.1.0.classpath">
    <pathelement location="C:/Users/Dmitri/Desktop/poi-4.1.0.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_parser.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.parser, clean.artifact.parser" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.parser" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.parser" value="${basedir}/out/artifacts/Parser"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="artifact.temp.output.Parser" value="${artifacts.temp.dir}/Parser.jar"/>
    <taskdef resource="com/sun/javafx/tools/ant/antlib.xml" uri="javafx:com.sun.javafx.tools.ant" classpath="${jdk.home.1.8}/lib/ant-javafx.jar"/>
  </target>
  
  <target name="clean.artifact.parser" description="clean Parser artifact output">
    <delete dir="${artifact.output.parser}"/>
  </target>
  
  <target name="artifact.parser" depends="init.artifacts, compile.module.parser" description="Build &#39;Parser&#39; artifact" xmlns:fx="javafx:com.sun.javafx.tools.ant">
    <mkdir dir="${artifact.output.parser}"/>
    <copy todir="${artifact.temp.output.Parser}">
      <fileset dir="${parser.output.dir}"/>
    </copy>
    <fx:fileset id="all_but_Parser" dir="${artifact.temp.output.Parser}" includes="**/*.jar">
      <exclude name="Parser.jar"/>
    </fx:fileset>
    <fx:fileset id="all_Parser" dir="${artifact.temp.output.Parser}" includes="**/*.jar"/>
    <fx:application id="Parser_id" name="Parser" mainClass="App.Main"/>
    <fx:jar destfile="${artifact.temp.output.Parser}/Parser.jar">
      <fx:application refid="Parser_id"/>
      <fileset dir="${artifact.temp.output.Parser}" excludes="**/*.jar"/>
      <fx:resources>
        <fx:fileset refid="all_but_Parser"/>
      </fx:resources>
      <manifest>
        <attribute name="Implementation-Title" value="Parser"/>
        <attribute name="Implementation-Version" value=""/>
        <attribute name="Implementation-Vendor" value="Dmitri"/>
      </manifest>
    </fx:jar>
    <fx:deploy width="300" height="155" updatemode="background" outdir="${artifact.temp.output.Parser}/deploy" outfile="Parser" nativeBundles="all">
      <fx:application refid="Parser_id"/>
      <fx:info title="Parser" vendor="Dmitri"/>
      <fx:resources>
        <fx:fileset refid="all_Parser"/>
      </fx:resources>
    </fx:deploy>
    <copy todir="${artifact.output.parser}">
      <fileset dir="${artifact.temp.output.Parser}/deploy"/>
    </copy>
    <delete includeemptydirs="true">
      <fileset dir="${artifact.temp.output.Parser}"/>
    </delete>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.parser" description="Build all artifacts">
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>